<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
    <div class="row">
      <%= render 'users/list', book: @book, user: @user %>
      <div class="box1 col-xs-9">
      <h2>Books</h2>
        <table class="table table-striped">
          <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>option</th>
            <th colspan="3"></th>
          </tr>
             </thead>
             <tbody>
          <div class="books-index-item">
            <% if @books.present? %>
           <% @books.each do |f| %>
            <tr>
              <td><%= link_to user_path(f.user_id) do %>
                <%= attachment_image_tag f.user, :profile_image, fallback: "no_image.jpg", format:'jpeg', size: "40x40" %>
                  <% end %>
                </td>
              <td><%= link_to f.title, book_path(f.id) %></td>
              <td><%= f.body %></td>
            </tr>
           <% end %>
          </div>
             <% end %>
             </tbody>
        </table>
      </div>
    </div>
</div>