
<div class="col-xs-3">
<h2>User info</h2>
<% if @user.present? %>
<div class="field">
	<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", format:'jpeg', size: "100x100" %>
</div>
  <table class="table">
  	<tbody>
  		<tr>
  			<th>name</th>
  			<th><%= user.name %></th>
  		</tr>
  		<tr>
  			<th>introduction</th>
  			<th><%= user.introduction %></th>
  		</tr>
  	</tbody> 	
  	<% end %>
  </table>

  <div class="row">
  	<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_3988" %>
  </div>

<h2>New book</h2>
<%= form_for(book) do |f| %>
	<div class="field row">
		<label for="book_title">Title</label>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>
	<div class="field row">
		<label for="book_opinion">Opinion</label>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>
	<div class="actions row">
		<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
	</div>
	<% end %>
</div>