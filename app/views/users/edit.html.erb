<div class="container">
	<div class="row">
	　<% if flash[:notice] %>
  　　　<p><%= flash[:notice] %></p>
　　　<% end %>
		<div class="col-md-4">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前" %>
			</div>
			<div class="form-group">
				<%= f.label :image %>
				<%= f.attachment_field :profile_image %>
			</div>
			<div class="form-group">
				<%= f.label :introduction %>
				<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"自己紹介" %>
			</div>
			<%= f.submit 'Update User' %>
			<% end %>
		</div>
	</div>
</div>